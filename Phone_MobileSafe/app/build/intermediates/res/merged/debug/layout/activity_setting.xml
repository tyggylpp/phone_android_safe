<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Phone="http://schemas.android.com/apk/res/com.dragon.phone_mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.dragon.phone_mobilesafe.view.SettingItemView
        android:id="@+id/stv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        Phone:desc_off="自动更新已关闭"
        Phone:desc_on="自动更新已开启"
        Phone:title="自动设置更新" />

    <com.dragon.phone_mobilesafe.view.SettingItemView
        android:id="@+id/stv_blacknumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        Phone:desc_off="黑名单更新已关闭"
        Phone:desc_on="黑名单更新已开启"
        Phone:title="黑名单更新设置" />

</LinearLayout>